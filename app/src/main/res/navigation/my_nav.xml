<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/recipesFragment">

    <fragment
        android:id="@+id/recipesFragment"
        android:name="com.example.foodrecipeapp.recipes.RecipesFragment"
        android:label="Recipes"
        tools:layout="@layout/fragment_recipes" >
        <action
            android:id="@+id/action_recipesFragment_to_bottomSheetFragment"
            app:destination="@id/recipesBottomSheet" />

        <argument
            android:name="backFromBottomSheet"
            app:argType="boolean"
            android:defaultValue="true" />
    </fragment>
    <fragment
        android:id="@+id/favoritrReciepesFragment"
        android:name="com.example.foodrecipeapp.favorite.FavoriteReciepesFragment"
        android:label="Favorite"
        tools:layout="@layout/fragment_favoritr_reciepes" />
    <fragment
        android:id="@+id/foodJokeFrgament"
        android:name="com.example.foodrecipeapp.joke.FoodJokeFrgament"
        android:label="Food Joke"
        tools:layout="@layout/fragment_food_joke_frgament" />
    <dialog
        android:id="@+id/recipesBottomSheet"
        android:name="com.example.foodrecipeapp.recipes.RecipeBottomSheet"
        android:label="Bottom Sheet Fragment"
        tools:layout="@layout/recipes_bottom_sheet">
        <action
            android:id="@+id/action_bottomSheetFragment_to_recipesFragment"
            app:destination="@id/recipesFragment" />



    </dialog>
</navigation>